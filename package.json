{
	"name": "monkey-ls",
	"displayName": "Monkey (mls)",
	"description": "Monkey Language Support",
	"author": "https://github.com/masa-suzu",
	"license": "MIT",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/masa-suzu/monkey-ls"
	},
	"publisher": "masa-suzu",
	"categories": [
		"Programming Languages",
		"Linters",
		"Snippets"
	],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.23.0"
	},
	"activationEvents": [
		"onLanguage:monkey"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Example configuration",
			"properties": {
				"MonkeylanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"MonkeylanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
		"languages": [
			{
				"id": "monkey",
				"aliases": [
					"Monkey",
					"monkey"
				],
				"extensions": [
					".monkey"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "monkey",
				"path": "./snippets/monkey.json"
			}
		],
		"grammars": [
			{
				"language": "monkey",
				"scopeName": "source.monkey",
				"path": "./syntaxes/monkey.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.0",
		"@types/node": "^8.0.0",
		"tslint": "^5.11.0",
		"typescript": "^3.1.3"
	}
}
